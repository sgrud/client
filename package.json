{
  "name": "@sgrud/client",
  "homepage": "https://github.com/sgrud/client",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Codeschluss GbR",
    "email": "info@codeschluss.de",
    "url": "https://www.codeschluss.de"
  },
  "bugs": {
    "email": "error@codeschluss.de",
    "url": "https://github.com/sgrud/client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgrud/client"
  },
  "exports": [
    "./packages/bin",
    "./packages/bus",
    "./packages/core",
    "./packages/data",
    "./packages/shell",
    "./packages/state",
    "./packages/utils"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:bus": "sgrud construct --cwd ./packages/bus",
    "build:core": "sgrud construct --cwd ./packages/core",
    "build:data": "sgrud construct --cwd ./packages/data",
    "build:shell": "sgrud construct --cwd ./packages/shell",
    "build:state": "sgrud construct --cwd ./packages/state",
    "build:utils": "sgrud construct --cwd ./packages/utils",
    "postbuild": "node -e 'sgrud.bin.postbuild();' -r ./dist/bin",
    "install": "microbundle -f cjs --cwd ./packages/bin --target node",
    "postinstall": "node -e 'sgrud.bin.postbuild();' -r ./dist/bin",
    "prepare": "npm install -s --no-audit --no-save ./dist/bin",
    "test": "eslint -f codeframe ./ && jest && typedoc"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "7.15.8",
    "@babel/runtime": "7.15.4",
    "express": "4.17.1",
    "fs-extra": "10.0.0",
    "microbundle": "0.14.0",
    "rollup-plugin-web-worker-loader": "1.6.1",
    "sade": "1.7.4",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "27.0.2",
    "@types/sade": "1.7.3",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "comlink": "4.3.1",
    "eslint": "7.32.0",
    "eslint-plugin-tsdoc": "0.2.14",
    "jest": "27.2.5",
    "npm-run-all": "4.1.5",
    "rxjs": "7.4.0",
    "ts-jest": "27.0.5",
    "typedoc": "0.22.5"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "forceExit": true,
    "coverageReporters": [
      "text"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/unittests/tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "@sgrud/(.*)": "<rootDir>/dist/$1"
    },
    "roots": [
      "<rootDir>/unittests"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./examples/*/tsconfig.json",
        "./skeletons/*/tsconfig.json",
        "./unittests/tsconfig.json"
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "rules": {
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/brace-style": "error",
      "@typescript-eslint/comma-dangle": "error",
      "@typescript-eslint/dot-notation": "error",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/member-delimiter-style": "error",
      "@typescript-eslint/member-ordering": [
        "error",
        {
          "default": [
            "static-field",
            "static-method",
            "abstract-field",
            "instance-field",
            "signature",
            "constructor",
            "abstract-method",
            "instance-method"
          ]
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-shadow": "error",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/object-curly-spacing": [
        "error",
        "always"
      ],
      "@typescript-eslint/quotes": [
        "error",
        "single"
      ],
      "@typescript-eslint/require-await": "off",
      "@typescript-eslint/restrict-plus-operands": "off",
      "@typescript-eslint/semi": "error",
      "@typescript-eslint/space-before-function-paren": [
        "error",
        "never"
      ],
      "@typescript-eslint/type-annotation-spacing": "error",
      "@typescript-eslint/typedef": [
        "error",
        {
          "memberVariableDeclaration": true,
          "parameter": true,
          "propertyDeclaration": true
        }
      ],
      "arrow-parens": "error",
      "default-case-last": "error",
      "grouped-accessor-pairs": "error",
      "max-len": [
        "error",
        {
          "ignorePattern": "^(export|import)",
          "code": 80
        }
      ],
      "no-case-declarations": "off",
      "no-cond-assign": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "no-trailing-spaces": "error",
      "one-var": [
        "error",
        "never"
      ],
      "tsdoc/syntax": "error",
      "valid-jsdoc": [
        "error",
        {
          "prefer": {
            "abstract": "virtual",
            "arg": "param",
            "argument": "param",
            "return": "returns"
          },
          "requireParamDescription": true,
          "requireParamType": false,
          "requireReturn": false,
          "requireReturnDescription": true,
          "requireReturnType": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "coverage",
    "dist",
    "docs",
    "jest.*",
    "rollup.*",
    "webpack.*"
  ]
}
