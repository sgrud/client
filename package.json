{
  "name": "@sgrud/client",
  "homepage": "https://github.com/sgrud/client",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Codeschluss GbR",
    "email": "info@codeschluss.de",
    "url": "https://www.codeschluss.de"
  },
  "bugs": {
    "email": "error@codeschluss.de",
    "url": "https://github.com/sgrud/client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgrud/client"
  },
  "scripts": {
    "install": "microbundle -f cjs --cwd ./packages/bin --target node",
    "postinstall": "node -e 'sgrud.bin.postbuild();' -r ./dist/bin",
    "prepare": "npm install -s --no-audit --no-save ./dist/bin",
    "build": "sgrud construct && sgrud postbuild",
    "test": "eslint ./ && jest && typedoc"
  },
  "sgrud": {
    "construct": [
      "./packages/bus",
      "./packages/core",
      "./packages/data",
      "./packages/shell",
      "./packages/state"
    ],
    "postbuild": [
      "./packages/bin",
      "./packages/bus",
      "./packages/core",
      "./packages/data",
      "./packages/shell",
      "./packages/state"
    ]
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/runtime": "^7.20.13",
    "comlink": "^4.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "incremental-dom": "^0.7.0",
    "microbundle": "^0.15.1",
    "puppeteer-core": "^19.6.1",
    "rxjs": "^7.8.0",
    "sade": "^1.8.1",
    "simple-git": "^3.16.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.4.0",
    "@types/puppeteer": "^5.4.7",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "ts-jest": "^29.0.5",
    "typedoc": "^0.23.24",
    "typedoc-plugin-mdn-links": "^2.0.2",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "extends": "@sgrud/eslint-config",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./examples/*/tsconfig.json",
        "./skeletons/*/tsconfig.json",
        "./unittests/tsconfig.json"
      ]
    }
  },
  "eslintIgnore": [
    "/coverage",
    "/dist",
    "/docs"
  ],
  "jest": {
    "coverageProvider": "v8",
    "forceExit": true,
    "maxWorkers": 1,
    "testEnvironment": "jest-environment-jsdom",
    "moduleNameMapper": {
      "@sgrud/(.*)": "<rootDir>/dist/$1"
    },
    "roots": [
      "<rootDir>/unittests"
    ],
    "testEnvironmentOptions": {
      "url": "http://127.0.0.1:58080"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/unittests/tsconfig.json"
        }
      ]
    }
  }
}
