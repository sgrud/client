{
  "name": "@sgrud/client",
  "homepage": "https://github.com/sgrud/client",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Codeschluss GbR",
    "email": "info@codeschluss.de",
    "url": "https://www.codeschluss.de"
  },
  "bugs": {
    "email": "error@codeschluss.de",
    "url": "https://github.com/sgrud/client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgrud/client"
  },
  "scripts": {
    "install": "microbundle -f cjs --cwd ./packages/bin --target node",
    "postinstall": "node -e 'sgrud.bin.postbuild();' -r ./dist/bin",
    "prepare": "npm install -s --no-audit --no-save ./dist/bin",
    "build": "sgrud construct && sgrud postbuild",
    "test": "eslint ./ && jest && typedoc"
  },
  "sgrud": {
    "construct": [
      "./packages/bus",
      "./packages/core",
      "./packages/data",
      "./packages/shell",
      "./packages/state"
    ],
    "postbuild": [
      "./packages/bin",
      "./packages/bus",
      "./packages/core",
      "./packages/data",
      "./packages/shell",
      "./packages/state"
    ]
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/runtime": "^7.21.5",
    "better-sqlite3": "^8.3.0",
    "comlink": "^4.4.1",
    "express": "^4.18.2",
    "incremental-dom": "^0.7.0",
    "microbundle": "^0.15.1",
    "puppeteer-core": "^19.11.1",
    "rxjs": "^7.8.1",
    "sade": "^1.8.1",
    "simple-git": "^3.18.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/ws": "^8.5.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "fake-indexeddb": "^4.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^21.1.2",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.6",
    "typedoc-plugin-mdn-links": "^3.0.3",
    "typescript": "^5.0.4",
    "ws": "^8.13.0"
  },
  "eslintConfig": {
    "extends": "@sgrud/eslint-config",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./unittests/tsconfig.json"
      ]
    }
  },
  "eslintIgnore": [
    "/coverage",
    "/dist",
    "/docs"
  ],
  "jest": {
    "coverageProvider": "v8",
    "forceExit": true,
    "maxWorkers": 1,
    "testEnvironment": "jest-environment-jsdom",
    "moduleNameMapper": {
      "@sgrud/(.*)": "<rootDir>/dist/$1"
    },
    "roots": [
      "<rootDir>/unittests"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/unittests/fixtures.ts"
    ],
    "testEnvironmentOptions": {
      "url": "http://127.0.0.1:58080",
      "customExportConditions": [
        "node"
      ]
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/unittests/tsconfig.json"
        }
      ]
    }
  },
  "typedocOptions": {
    "name": "@sgrud",
    "gitRevision": "main",
    "includes": "./packages",
    "excludeExternals": true,
    "resolveUtilityTypes": true,
    "treatWarningsAsErrors": true,
    "compilerOptions": {
      "noUnusedParameters": false
    },
    "entryPoints": [
      "./packages/*/index.ts"
    ],
    "externalSymbolLinkMappings": {
      "comlink": {
        "*": "https://github.com/GoogleChromeLabs/comlink#api"
      },
      "incremental-dom": {
        "*": "http://github.com/google/incremental-dom/#usage"
      }
    },
    "navigation": {
      "includeGroups": true
    },
    "plugin": [
      "typedoc-plugin-mdn-links",
      "@sgrud/typedoc-plugin"
    ],
    "sort": [
      "static-first",
      "visibility",
      "alphabetical"
    ],
    "validation": {
      "invalidLink": true,
      "notExported": true
    }
  }
}
