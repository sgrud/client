{
  "name": "@sgrud/client",
  "homepage": "https://github.com/sgrud/client",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "Codeschluss GbR",
    "email": "info@codeschluss.de",
    "url": "https://www.codeschluss.de"
  },
  "bugs": {
    "email": "error@codeschluss.de",
    "url": "https://github.com/sgrud/client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgrud/client"
  },
  "scripts": {
    "install": "microbundle -f cjs --cwd ./packages/bin --target node",
    "postinstall": "node -e 'sgrud.bin.postbuild();' -r ./dist/bin",
    "prepare": "npm install -s --no-audit --no-save ./dist/bin",
    "build": "sgrud construct && sgrud postbuild",
    "test": "eslint ./ && jest && typedoc"
  },
  "sgrud": {
    "construct": [
      "./packages/bus",
      "./packages/core",
      "./packages/data",
      "./packages/shell",
      "./packages/state"
    ],
    "postbuild": [
      "./packages/bin",
      "./packages/bus",
      "./packages/core",
      "./packages/data",
      "./packages/shell",
      "./packages/state"
    ]
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.18.2",
    "@babel/runtime": "^7.18.3",
    "comlink": "^4.3.1",
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "incremental-dom": "^0.7.0",
    "microbundle": "^0.15.0",
    "puppeteer-core": "^14.1.2",
    "rollup-plugin-web-worker-loader": "^1.6.1",
    "rxjs": "^7.5.5",
    "sade": "^1.8.1",
    "simple-git": "^3.7.1",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.5.1",
    "@types/puppeteer": "^5.4.6",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "ts-jest": "^28.0.3",
    "typedoc": "^0.22.16"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "forceExit": true,
    "maxWorkers": 1,
    "testEnvironment": "jest-environment-jsdom",
    "coverageReporters": [
      "text"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/unittests/tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "@sgrud/(.*)": "<rootDir>/dist/$1"
    },
    "roots": [
      "<rootDir>/unittests"
    ],
    "testEnvironmentOptions": {
      "url": "http://127.0.0.1:58080"
    }
  },
  "eslintConfig": {
    "extends": "@sgrud/eslint-config",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./examples/*/tsconfig.json",
        "./skeletons/*/tsconfig.json",
        "./unittests/tsconfig.json"
      ]
    }
  },
  "eslintIgnore": [
    "coverage",
    "dist",
    "docs",
    "jest.*",
    "rollup.*",
    "webpack.*"
  ]
}
