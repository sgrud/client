{
  "name": "@sgrud/client",
  "description": "SGRUD Client Library",
  "homepage": "https://github.com/sgrud/client",
  "version": "0.2.1",
  "license": "MIT",
  "author": {
    "name": "Codeschluss GbR",
    "email": "info@codeschluss.de",
    "url": "https://www.codeschluss.de"
  },
  "bugs": {
    "email": "info@codeschluss.de",
    "url": "https://github.com/sgrud/client/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sgrud/client"
  },
  "exports": [
    "./packages/bin",
    "./packages/bus",
    "./packages/core",
    "./packages/data",
    "./packages/shell",
    "./packages/state",
    "./packages/utils"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:bin": "microbundle --cwd ./packages/bin -f cjs",
    "build:bus": "microbundle --cwd ./packages/bus --workers",
    "build:core": "microbundle --cwd ./packages/core --workers",
    "build:data": "microbundle --cwd ./packages/data --workers",
    "build:shell": "microbundle --cwd ./packages/shell --workers",
    "build:state": "microbundle --cwd ./packages/state --workers",
    "build:utils": "microbundle --cwd ./packages/utils --workers",
    "postbuild": "node --eval 'sgrud.postbuild()' -r ./dist/bin",
    "test": "eslint ./packages ./unittests && jest --forceExit"
  },
  "dependencies": {
    "express": "4.17.1",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/jest": "26.0.24",
    "microbundle": "0.13.3",
    "npm-run-all": "4.1.5"
  },
  "optionalDependencies": {
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.28.4",
    "eslint": "7.31.0",
    "jest": "27.0.6",
    "ts-jest": "27.0.4"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/unittests/tsconfig.json"
      }
    },
    "moduleNameMapper": {
      "@sgrud/(.*)": "<rootDir>/dist/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/*"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./unittests/tsconfig.json"
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/ban-types": "off",
      "@typescript-eslint/brace-style": "error",
      "@typescript-eslint/explicit-member-accessibility": "error",
      "@typescript-eslint/member-delimiter-style": "error",
      "@typescript-eslint/member-ordering": [
        "error",
        {
          "default": [
            "static-field",
            "static-method",
            "abstract-field",
            "instance-field",
            "signature",
            "constructor",
            "abstract-method",
            "instance-method"
          ]
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/quotes": [
        "error",
        "single"
      ],
      "@typescript-eslint/require-await": "off",
      "@typescript-eslint/semi": "error",
      "arrow-parens": "error",
      "comma-dangle": "error",
      "grouped-accessor-pairs": "error",
      "max-len": [
        "error",
        {
          "ignorePattern": "^(export|import)",
          "code": 80
        }
      ],
      "no-cond-assign": "off",
      "no-multiple-empty-lines": [
        "error",
        {
          "max": 1
        }
      ],
      "no-trailing-spaces": "error",
      "one-var": [
        "error",
        "never"
      ]
    }
  },
  "eslintIgnore": [
    "examples",
    "skeletons"
  ]
}
